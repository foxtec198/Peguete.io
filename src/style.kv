<Cad>
    name: 'cad'
    MDFloatLayout:
        FitImage:
            size_hint: None, None
            size: 150, 150
            source: 'src/anim2.png'
            pos_hint: {'center_x': .5,'center_y': .8}
        MDLabel:
            pos_hint: {'center_x': .5,'center_y': .6}
            text: "Cadastro"
            halign: 'center'
        MDTextField:
            id: nomeCompleto
            pos_hint: {'center_x': .5,'center_y': .4}
            size_hint: .8, None
            hint_text: 'Nome Completo'
            icon_left: 'pen'
        MDTextField:
            id: emailCad
            pos_hint: {'center_x': .5,'center_y': .5}
            size_hint: .8, None
            hint_text: 'Email'
            icon_left: 'email'
            validator: 'email'
        MDTextField:
            id: pwdCad
            pos_hint: {'center_x': .5,'center_y': .3}
            size_hint: .8, None
            hint_text: 'Crie uma Senha'
            icon_left: 'key-variant'
            password: True
        MDIconButton:
            size_hint: None, None
            theme_text_color: 'Hint'
            pos_hint: {'center_x': .85,'center_y': .3}
            icon: 'eye'
            on_release:
                self.icon = 'eye-off' if self.icon == 'eye' else 'eye'
                pwdCad.password = False if pwdCad.password == True else True
        MDFillRoundFlatIconButton:
            md_bg_color: '#504cff'
            size_hint: .6, .06
            icon: 'package-variant-plus'
            pos_hint: {'center_x': .5,'center_y': .15}
            text: 'Criar conta'
        MDFillRoundFlatIconButton:
            icon: 'login'
            md_bg_color: '#fe2077'
            pos_hint: {'center_x': .5,'center_y': .08}
            text: 'Já tem conta? Faça login'
            size_hint: .6, .06
            on_release:
                app.changeScreen('login')
            
<Login>
    name: 'login'
    MDFloatLayout:
        FitImage:
            size_hint: None, None
            size: 150, 150
            source: 'src/anim2.png'
            pos_hint: {'center_x': .5,'center_y': .8}
        MDLabel:
            pos_hint: {'center_x': .5,'center_y': .6}
            text: "Login"
            halign: 'center'
        MDTextField:
            id: emailLogin
            pos_hint: {'center_x': .5,'center_y': .5}
            size_hint: .8, None
            hint_text: 'Email'
            icon_left: 'email'
            validator: 'email'
        MDTextField:
            id: pwdLogin
            pos_hint: {'center_x': .5,'center_y': .4}
            size_hint: .8, None
            hint_text: 'Senha'
            icon_left: 'key-variant'
            password: True
        MDIconButton:
            size_hint: None, None
            theme_text_color: 'Hint'
            pos_hint: {'center_x': .85,'center_y': .4}
            icon: 'eye'
            on_release:
                self.icon = 'eye-off' if self.icon == 'eye' else 'eye'
                pwdLogin.password = False if pwdLogin.password == True else True
        
        MDFillRoundFlatIconButton:
            md_bg_color: '#504cff'
            size_hint: .6, .06
            icon: 'login'
            pos_hint: {'center_x': .5,'center_y': .15}
            text: 'Entrar'
            
        MDFillRoundFlatIconButton:
            icon: 'package-variant-plus'
            md_bg_color: '#fe2077'
            pos_hint: {'center_x': .5,'center_y': .08}
            text: 'Cadastre-se'
            size_hint: .6, .06
            on_release:
                app.changeScreen('cad', 'left')
<vEmail>
    name: 'vEmail'
    FloatLayout:
        FitImage:
            source: 'src/mailSend.png'
            size_hint: None, None
            size: 200, 200
            pos_hint: {'center_x': .5,'center_y': .7 }
        MDLabel:
            halign: 'center'
            text: "Emviamos para seu email \numa validação, por favor \nconfirme seu email"
            pos_hint: {'center_x': .5 ,'center_y': .5 }
        MDTextField:
            halign: 'center'
            hint_text: 'Código de Verificação'
            icon_left: 'numeric'
            input_type: 'number'
            pos_hint: {'center_x': .5 ,'center_y': .4 }
            size_hint: .8, None
        MDFillRoundFlatIconButton:
            icon: 'check-decagram'
            text: 'Verificar Email'
            pos_hint: {'center_x': .5 ,'center_y': .2 }
            size_hint: None, .06
